<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/focusMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/timer_font2"
            android:hint="Focus Minutes"
            android:inputType="number"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/breakMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/timer_font2"
            android:hint="Break Minutes"
            android:inputType="number"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/longBreakMinutes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/timer_font2"
            android:hint="Long Break Minutes"
            android:inputType="number"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/pomodoroSets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/timer_font2"
            android:hint="Pomodoro Sets"
            android:inputType="number"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>